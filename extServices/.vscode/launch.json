{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Containers: Up (docker-compose)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cd container-managing && docker compose up -d --build"]
    },
    {
      "name": "Containers: Migrate DBs",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cd container-managing && make migrate"]
    },
    {
      "name": "Containers: Smoke Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cd container-managing && make test"]
    },
    {
      "name": "Logs UI: Dozzle (open browser)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cd container-managing && docker compose up -d dozzle && xdg-open http://localhost:9999 || open http://localhost:9999 || true"]
    },
    {
      "name": "TUI: LazyDocker (in terminal)",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cd container-managing && docker compose run --rm lazydocker"]
    }
  ]
}

