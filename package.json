{
  "name": "diabetactic",
  "version": "0.0.1",
  "author": "Diabetactic Team - FIUBA",
  "homepage": "https://github.com/diabetactic/diabetify",
  "scripts": {
    "ng:help": "ng -h",
    "ng:mcp": "ng mcp",
    "// === DEV SERVER ===": "",
    "start": "node scripts/start-with-env.mjs",
    "start:mock": "ENV=mock npm start",
    "start:local": "ENV=local npm start",
    "start:cloud": "ENV=cloud npm start",
    "// === WEB BUILD ===": "",
    "build": "ng build",
    "build:prod": "ng build --configuration=production --aot --optimization",
    "build:mock": "ng build --configuration=mock",
    "build:heroku": "ng build --configuration=heroku",
    "build:analyze": "ng build --stats-json && echo 'Run: npx webpack-bundle-analyzer dist/stats.json'",
    "// === MOBILE BUILD ===": "",
    "mobile:sync": "npm run build:heroku && npx cap sync",
    "mobile:build": "npm run mobile:sync && cd android && ./gradlew assembleDebug",
    "mobile:build:release": "npm run mobile:sync && cd android && ./gradlew assembleRelease",
    "mobile:install": "npm run mobile:build && cd android && ./gradlew installDebug",
    "mobile:run": "npm run mobile:install && adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "mobile:clean": "cd android && ./gradlew clean && cd .. && rm -rf www .angular",
    "mobile:rebuild": "npm run mobile:clean && npm run mobile:build",
    "// === ANDROID SPECIFIC ===": "",
    "android:open": "studio android/",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew installDebug",
    "android:uninstall": "adb uninstall io.diabetactic.app",
    "android:logs": "adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "android:clear-logs": "adb logcat -c",
    "android:devices": "adb devices",
    "android:emulator": "emulator -avd Medium_Phone_API_36.1 -no-snapshot-load &",
    "// === DEPLOY ===": "",
    "deploy:device": "npm run mobile:build && adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "deploy:apk": "npm run mobile:build && echo 'APK at: android/app/build/outputs/apk/debug/app-debug.apk'",
    "// === TESTING ===": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:integration": "jest --config jest.integration.config.js --runInBand --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:docker": "./scripts/run-e2e-docker.sh",
    "test:e2e:docker:build": "./scripts/run-e2e-docker.sh --build",
    "test:a11y": "playwright test accessibility-audit.spec.ts",
    "test:a11y:headed": "playwright test accessibility-audit.spec.ts --headed",
    "test:ui-quality": "playwright test accessibility-audit.spec.ts --grep 'UI Quality'",
    "test:mobile": "npm run mobile:build && npm run test:e2e",
    "// === QUALITY ===": "",
    "lint": "eslint . --ext .ts,.js",
    "lint:styles": "stylelint \"src/**/*.{scss,css}\"",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm test",
    "// === UTILITIES ===": "",
    "clean": "rm -rf node_modules package-lock.json www .angular && npm install",
    "clean:all": "npm run clean && npm run mobile:clean",
    "i18n:check": "node scripts/check-i18n-missing.js",
    "docs:sync": "node scripts/sync-docs.mjs",
    "cap:sync": "npx cap sync",
    "cap:update": "npx cap update",
    "// === SETUP ===": "",
    "prepare": "husky",
    "postinstall": "[ -d www ] && npx cap sync || echo 'Skipping cap sync (no www directory yet)'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/localize": "^20.3.7",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@aparajita/capacitor-secure-storage": "^6.0.1",
    "@aparajita/tailwind-ionic": "^2.3.0",
    "@capacitor/android": "^6.1.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/browser": "^6.0.5",
    "@capacitor/core": "^6.1.0",
    "@capacitor/device": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/keyboard": "^6.0.1",
    "@capacitor/local-notifications": "^6.1.3",
    "@capacitor/network": "^6.0.3",
    "@capacitor/preferences": "^6.0.3",
    "@capacitor/splash-screen": "^6.0.3",
    "@capacitor/status-bar": "^6.0.2",
    "@ionic/angular": "^8.0.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "autoprefixer": "^10.4.22",
    "dexie": "^4.2.1",
    "lru-cache": "^11.2.2",
    "lucide-angular": "^0.553.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^20.0.0",
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular-eslint/builder": "^19.0.0",
    "@angular-eslint/eslint-plugin": "^19.0.0",
    "@angular-eslint/eslint-plugin-template": "^19.0.0",
    "@angular-eslint/schematics": "^19.0.0",
    "@angular-eslint/template-parser": "^19.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@angular/language-service": "^20.0.0",
    "@axe-core/playwright": "^4.11.0",
    "@capacitor/cli": "^6.1.0",
    "@faker-js/faker": "^10.1.0",
    "@ionic/angular-toolkit": "^11.0.1",
    "@playwright/mcp": "^0.0.48",
    "@playwright/test": "^1.48.0",
    "@sparticuz/chromium-min": "^141.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/pixelmatch": "^5.2.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "angular-eslint": "^21.0.1",
    "axe-html-reporter": "^2.2.11",
    "daisyui": "^5.5.5",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.6.2",
    "lint-staged": "^16.2.3",
    "pixelmatch": "^7.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "stylelint": "^16.12.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-no-unsupported-browser-features": "^8.0.5",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.48.0"
  },
  "description": "Diabetactic - Mobile app for diabetes glucose management built with Ionic/Angular",
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 4 Chrome versions",
    "last 4 Firefox versions",
    "last 4 Edge versions",
    "last 4 Safari versions",
    "last 4 iOS versions"
  ]
}
