{
  "name": "diabetactic",
  "version": "0.0.1",
  "author": "Diabetactic Team - FIUBA",
  "homepage": "https://github.com/diabetactic/diabetify",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "ng:help": "ng -h",
    "ng:mcp": "ng mcp",
    "// === DEV SERVER ===": "",
    "start": "node scripts/start-with-env.mjs",
    "start:mock": "ENV=mock pnpm start",
    "start:local": "ENV=local pnpm start",
    "start:cloud": "ENV=cloud pnpm start",
    "// === WEB BUILD ===": "",
    "build": "ng build",
    "build:prod": "ng build --configuration=production --aot --optimization",
    "build:mock": "ng build --configuration=mock",
    "build:heroku": "ng build --configuration=heroku",
    "build:analyze": "ng build --stats-json && echo 'Run: npx webpack-bundle-analyzer dist/stats.json'",
    "// === MOBILE BUILD ===": "",
    "mobile:sync": "pnpm run build:heroku && npx cap sync",
    "mobile:build": "pnpm run mobile:sync && cd android && ./gradlew assembleDebug",
    "mobile:build:release": "pnpm run mobile:sync && cd android && ./gradlew assembleRelease",
    "mobile:install": "pnpm run mobile:build && cd android && ./gradlew installDebug",
    "mobile:run": "pnpm run mobile:install && adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "mobile:clean": "cd android && ./gradlew clean && cd .. && rm -rf www .angular",
    "mobile:rebuild": "pnpm run mobile:clean && pnpm run mobile:build",
    "// === ANDROID SPECIFIC ===": "",
    "android:open": "studio android/",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew installDebug",
    "android:uninstall": "adb uninstall io.diabetactic.app",
    "android:logs": "adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "android:clear-logs": "adb logcat -c",
    "android:devices": "adb devices",
    "android:emulator": "emulator -avd Medium_Phone_API_36.1 -no-snapshot-load &",
    "// === DEPLOY ===": "",
    "deploy:device": "pnpm run mobile:build && adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "deploy:apk": "pnpm run mobile:build && echo 'APK at: android/app/build/outputs/apk/debug/app-debug.apk'",
    "// === DOCKER BACKEND ===": "",
    "docker:start": "cd docker && ./start.sh",
    "docker:stop": "cd docker && ./stop.sh",
    "docker:reset": "cd docker && ./reset-db.sh",
    "docker:logs": "cd docker && ./logs.sh",
    "docker:seed": "cd docker && ./seed-test-data.sh",
    "docker:cleanup": "cd docker && ./cleanup-test-data.sh",
    "docker:user:create": "cd docker && ./create-user.sh",
    "docker:user:delete": "cd docker && ./delete-user.sh",
    "docker:user:list": "cd docker && ./list-users.sh",
    "// === DOCKER E2E TESTS ===": "",
    "test:docker": "cd docker && ./run-e2e-docker.sh",
    "test:docker:fresh": "cd docker && ./run-e2e-docker.sh --fresh",
    "test:docker:playwright": "cd docker && ./run-e2e-docker.sh playwright",
    "test:docker:maestro": "cd docker && ./run-e2e-docker.sh maestro",
    "test:e2e:local": "E2E_DOCKER_TESTS=true E2E_API_URL=http://localhost:8000 E2E_BACKOFFICE_URL=http://localhost:8001 pnpm run test:e2e -- --grep @docker",
    "// === LOCAL DEVELOPMENT ===": "",
    "local:start": "./scripts/local-dev-start.sh",
    "local:start:fresh": "./scripts/local-dev-start.sh --fresh",
    "local:stop": "./scripts/local-dev-start.sh --stop",
    "// === TESTING ===": "",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=verbose --reporter=junit --outputFile.junit=./junit.xml --coverage",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:integration:msw": "vitest run -c vitest.msw.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:docker": "./scripts/run-e2e-docker.sh",
    "test:e2e:docker:build": "./scripts/run-e2e-docker.sh --build",
    "test:a11y": "playwright test accessibility-audit.spec.ts",
    "test:a11y:headed": "playwright test accessibility-audit.spec.ts --headed",
    "test:ui-quality": "playwright test accessibility-audit.spec.ts --grep 'UI Quality'",
    "test:mobile": "pnpm run mobile:build && pnpm run test:e2e",
    "// === VISUAL REGRESSION ===": "",
    "test:visual": "playwright test --grep @docker-visual",
    "test:visual:update": "playwright test --grep @docker-visual --update-snapshots",
    "test:visual:headed": "playwright test --grep @docker-visual --headed",
    "test:visual:mock": "E2E_MOCK_MODE=true playwright test --grep @visual-mock",
    "test:visual:mock:update": "E2E_MOCK_MODE=true playwright test --grep @visual-mock --update-snapshots",
    "test:visual:report": "playwright show-report",
    "// === QUALITY ===": "",
    "lint": "eslint . --ext .ts,.js",
    "lint:styles": "stylelint \"src/**/*.{scss,css}\"",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "quality": "pnpm run lint && pnpm run lint:styles && pnpm run format:check && pnpm test",
    "// === CODE ANALYSIS ===": "",
    "analyze:dead-code": "knip",
    "analyze:circular": "dpdm --circular ./src/main.ts",
    "analyze:complexity": "cyclomatic-complexity 'src/**/*.ts' --threshold-warnings 10 --threshold-errors 20 --exclude '**/*.spec.ts'",
    "analyze:duplication": "jscpd src/",
    "analyze:type-coverage": "type-coverage --detail --strict",
    "analyze:bundle": "hawkeye dist/diabetify/browser/stats.json --json > reports/bundle-analysis.json",
    "analyze:all": "pnpm run analyze:dead-code && pnpm run analyze:circular && pnpm run analyze:complexity && pnpm run analyze:duplication && pnpm run analyze:type-coverage",
    "fix:dead-code": "knip --fix",
    "fix:deps": "ncu -u && pnpm install",
    "fix:deps:check": "ncu",
    "fix:audit": "pnpm audit --fix",
    "// === UTILITIES ===": "",
    "clean": "rm -rf node_modules package-lock.json www .angular && pnpm install",
    "clean:all": "pnpm run clean && pnpm run mobile:clean",
    "i18n:check": "node scripts/check-i18n-missing.js",
    "docs:sync": "node scripts/sync-docs.mjs",
    "cap:sync": "npx cap sync",
    "cap:update": "npx cap update",
    "// === SETUP ===": "",
    "prepare": "lefthook install",
    "postinstall": "[ -d www ] && npx cap sync || echo 'Skipping cap sync (no www directory yet)'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/common": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/localize": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/router": "^21.0.6",
    "@aparajita/capacitor-secure-storage": "^7.1.6",
    "@aparajita/tailwind-ionic": "^2.3.0",
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/device": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@capgo/capacitor-native-biometric": "^8.0.1",
    "@ionic/angular": "^8.7.15",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "autoprefixer": "^10.4.22",
    "capacitor-widget-bridge": "^7.0.0",
    "chart.js": "^4.5.1",
    "chartjs-plugin-zoom": "^2.2.0",
    "dexie": "^4.2.1",
    "hammerjs": "^2.0.8",
    "lru-cache": "^11.2.2",
    "lucide-angular": "^0.562.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^2.1.3",
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular-experts/hawkeye": "^1.7.2",
    "@angular/cli": "^21.0.4",
    "@angular/compiler": "^21.0.6",
    "@angular/compiler-cli": "^21.0.6",
    "@angular/language-service": "^21.0.6",
    "@axe-core/playwright": "^4.11.0",
    "@capacitor/cli": "^8.0.0",
    "@eslint/js": "^9.39.2",
    "@evilmartians/lefthook": "^2.0.11",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "angular-eslint": "^21.0.1",
    "cyclomatic-complexity": "^1.2.5",
    "daisyui": "^5.5.5",
    "dpdm": "^3.14.0",
    "eslint": "^9.0.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.11",
    "jscpd": "^4.0.5",
    "jsdom": "^27.3.0",
    "knip": "^5.73.4",
    "msw": "^2.12.4",
    "npm-check-updates": "^19.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^16.12.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-no-unsupported-browser-features": "^8.0.5",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^3.4.13",
    "type-coverage": "^2.29.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.15"
  },
  "description": "Diabetactic - Mobile app for diabetes glucose management built with Ionic/Angular",
  "browserslist": [
    "last 4 Chrome versions",
    "last 4 Firefox versions",
    "last 4 Edge versions",
    "last 4 Safari versions",
    "last 4 iOS versions"
  ]
}
