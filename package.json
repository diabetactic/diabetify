{
  "name": "diabetactic",
  "version": "1.0.0",
  "description": "Diabetactic - Mobile app for diabetes glucose management built with Ionic/Angular",
  "author": "Diabetactic Team - FIUBA",
  "homepage": "https://github.com/diabetactic/diabetify",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "[ -d www ] && npx cap sync || echo 'Skipping cap sync (no www directory yet)'",
    "heroku-postbuild": "pnpm run build:prod:ng && pnpm install --prod --ignore-scripts",
    "ng": "ng",
    "start": "node scripts/start-with-env.mjs",
    "start:mock": "ENV=mock pnpm start",
    "start:local": "ENV=local pnpm start",
    "start:cloud": "ENV=cloud pnpm start",
    "build": "turbo run build:ng",
    "build:ng": "ng build",
    "build:prod": "turbo run build:prod:ng",
    "build:prod:ng": "ng build --configuration=production --aot --optimization",
    "build:mock": "ng build --configuration=mock",
    "build:local": "ng build --configuration=local",
    "build:heroku": "ng build --configuration=heroku",
    "build:analyze": "ng build --stats-json && echo 'Run: npx webpack-bundle-analyzer dist/stats.json'",
    "mobile:sync": "pnpm build:heroku && npx cap sync",
    "mobile:build": "pnpm mobile:sync && cd android && ./gradlew assembleDebug",
    "mobile:build:release": "pnpm mobile:sync && cd android && ./gradlew assembleRelease",
    "mobile:build:bundle": "pnpm mobile:sync && cd android && ./gradlew bundleRelease",
    "mobile:release": "./scripts/build-release.sh",
    "mobile:install": "pnpm mobile:build && cd android && ./gradlew installDebug",
    "mobile:run": "pnpm mobile:install && adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "mobile:clean": "cd android && ./gradlew clean && cd .. && rm -rf www .angular",
    "mobile:rebuild": "pnpm mobile:clean && pnpm mobile:build",
    "mobile:deploy": "pnpm mobile:build && adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "android:open": "studio android/",
    "android:logs": "adb logcat | grep -i 'diabetactic\\|chromium\\|capacitor'",
    "android:clear-logs": "adb logcat -c",
    "android:devices": "adb devices",
    "android:emulator": "emulator -avd Medium_Phone_API_36.1 -no-snapshot-load &",
    "android:uninstall": "adb uninstall io.diabetactic.app",
    "docker:start": "cd docker && ./start.sh",
    "docker:stop": "cd docker && ./stop.sh",
    "docker:reset": "cd docker && ./reset-db.sh",
    "docker:logs": "cd docker && ./logs.sh",
    "docker:seed": "cd docker && ./seed-test-data.sh",
    "docker:cleanup": "cd docker && ./cleanup-test-data.sh",
    "docker:user:create": "cd docker && ./create-user.sh",
    "docker:user:delete": "cd docker && ./delete-user.sh",
    "docker:user:list": "cd docker && ./list-users.sh",
    "local:start": "./scripts/local-dev-start.sh",
    "local:start:fresh": "./scripts/local-dev-start.sh --fresh",
    "local:stop": "./scripts/local-dev-start.sh --stop",
    "test": "turbo run test:run",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=verbose --reporter=junit --outputFile.junit=./junit.xml --coverage",
    "test:integration:msw": "vitest run -c vitest.msw.config.ts",
    "test:integration:backend": "vitest run -c vitest.integration.config.ts",
    "test:e2e": "E2E_DOCKER_TESTS=true playwright test --grep @docker",
    "test:e2e:headed": "E2E_DOCKER_TESTS=true playwright test --grep @docker --headed",
    "test:e2e:full": "./docker/run-e2e-docker.sh",
    "test:e2e:fresh": "./docker/run-e2e-docker.sh --fresh",
    "test:e2e:mobile": "pnpm mobile:build && pnpm test:e2e",
    "test:e2e:smoke": "E2E_DOCKER_TESTS=true playwright test --grep @smoke",
    "test:e2e:functional": "E2E_DOCKER_TESTS=true playwright test --grep @functional",
    "test:e2e:visual": "E2E_DOCKER_TESTS=true playwright test --grep @visual",
    "test:e2e:visual:update": "E2E_DOCKER_TESTS=true playwright test --grep @visual --update-snapshots",
    "test:prod-smoke": "pnpm run build:prod && pnpm exec playwright test -c playwright.prod-smoke.config.ts",
    "test:report": "playwright show-report",
    "test:report:serve": "npx serve playwright-report -l 9323",
    "lint": "turbo run lint:ts:run lint:styles:run analyze:dead-code analyze:circular analyze:type-coverage",
    "lint:ts": "turbo run lint:ts:run",
    "lint:ts:run": "eslint . --ext .ts,.js",
    "lint:ts:fix": "eslint . --ext .ts,.js --fix",
    "lint:styles": "turbo run lint:styles:run",
    "lint:styles:run": "stylelint \"src/**/*.{scss,css}\"",
    "format": "prettier --write .",
    "format:check": "turbo run format:check:run",
    "format:check:run": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "quality": "turbo run lint:ts:run lint:styles:run format:check:run analyze:dead-code analyze:circular analyze:type-coverage i18n:check check:guardrails test:run test:integration:msw",
    "quality:static": "turbo run lint:ts:run lint:styles:run format:check:run analyze:dead-code analyze:circular analyze:type-coverage i18n:check check:guardrails",
    "quality:full": "turbo run lint:ts:run lint:styles:run format:check:run analyze:dead-code analyze:circular analyze:type-coverage i18n:check check:guardrails test:run test:integration:msw test:integration:backend",
    "ci": "node scripts/ci-all.mjs",
    "ci:docker": "CI_DOCKER=true node scripts/ci-all.mjs",
    "analyze:dead-code": "knip",
    "analyze:circular": "dpdm --circular --no-tree ./src/main.ts",
    "analyze:complexity": "cyclomatic-complexity 'src/**/*.ts' --threshold-warnings 10 --threshold-errors 20 --exclude '**/*.spec.ts'",
    "analyze:duplication": "jscpd src/",
    "analyze:type-coverage": "type-coverage --detail --strict",
    "analyze:bundle": "hawkeye dist/diabetify/browser/stats.json --json > reports/bundle-analysis.json",
    "css:analyze": "pnpm run build:prod && npx analyze-css --file www/browser/styles-*.css",
    "css:report": "pnpm run build:prod && npx analyze-css --file www/browser/styles-*.css --pretty > reports/css-analysis.json",
    "fix:dead-code": "knip --fix",
    "fix:deps": "ncu -u && pnpm install",
    "fix:deps:check": "ncu",
    "fix:audit": "pnpm audit --fix",
    "clean": "rm -rf node_modules www .angular && pnpm install",
    "clean:all": "pnpm clean && pnpm mobile:clean",
    "doctor": "./scripts/doctor.sh --all",
    "doctor:reset": "./scripts/doctor.sh --reset --docker-clean --pnpm-store-prune --reinstall --all",
    "i18n:check": "node scripts/check-i18n-missing.js",
    "check:guardrails": "node scripts/check-guardrails.mjs",
    "docs:sync": "node scripts/sync-docs.mjs",
    "cap:sync": "npx cap sync",
    "cap:update": "npx cap update"
  },
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/localize": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@aparajita/capacitor-secure-storage": "^7.1.6",
    "@capacitor-mlkit/barcode-scanning": "^8.0.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/app": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "@capacitor/device": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@capgo/capacitor-native-biometric": "^8.0.4",
    "@ionic/angular": "^8.7.16",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "capacitor-widget-bridge": "^8.0.0",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "express": "^5.2.1",
    "hammerjs": "^2.0.8",
    "lru-cache": "^11.2.2",
    "lucide-angular": "^0.562.0",
    "ng2-charts": "^8.0.0",
    "ngx-image-cropper": "^9.1.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^2.2.2",
    "@angular-devkit/build-angular": "^21.1.1",
    "@angular-experts/hawkeye": "^1.7.2",
    "@angular/cli": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@angular/language-service": "^21.1.1",
    "@aparajita/tailwind-ionic": "^2.3.0",
    "@capacitor/cli": "^8.0.1",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@ionic/core": "^8.7.16",
    "@midscene/web": "^1.2.0",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "analyze-css": "^2.4.26",
    "angular-eslint": "^21.0.1",
    "autoprefixer": "^10.4.23",
    "cyclomatic-complexity": "^1.2.5",
    "daisyui": "^5.5.14",
    "dpdm": "^3.14.0",
    "eslint": "^9.0.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.1.0",
    "ionicons": "^8.0.13",
    "jscpd": "^4.0.7",
    "jsdom": "^27.4.0",
    "knip": "^5.80.2",
    "msw": "^2.12.7",
    "npm-check-updates": "^19.3.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "serve": "^14.2.5",
    "stylelint": "^16.12.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-no-unsupported-browser-features": "^8.0.5",
    "stylelint-order": "^7.0.1",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.3.0",
    "turbo": "^2.7.4",
    "type-coverage": "^2.29.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  },
  "browserslist": [
    "last 4 Chrome versions",
    "last 4 Firefox versions",
    "last 4 Edge versions",
    "last 4 Safari versions",
    "last 4 iOS versions"
  ],
  "pnpm": {
    "overrides": {
      "vite": "7.3.0"
    }
  }
}
