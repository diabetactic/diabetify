{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": ["src/main.ts", "server/heroku-web-server.js"],
  "project": ["src/**/*.ts", "server/**/*.js"],
  "ignore": [
    "**/*.spec.ts",
    "**/test-*.ts",
    "**/__mocks__/**",
    "**/mocks/**",
    "**/tests/helpers/**",
    "**/tests/integration/**",
    "**/tests/integration-msw/**",
    "**/test-setup/**",
    "**/constants/**",
    "**/contracts/**",
    "**/config/mock-adapter-config.ts",
    "**/utils/type-guards.ts",
    "**/models/http-error.model.ts"
  ],
  "ignoreDependencies": [
    "@angular/language-service",
    "@analogjs/vite-plugin-angular",
    "@midscene/web"
  ],
  "ignoreBinaries": ["only-allow", "adb", "studio", "emulator"],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "unlisted": "off",
    "enumMembers": "off"
  }
}
