# pnpm configuration for Angular/Ionic compatibility
# Hoisting is required for Angular's module resolution
shamefully-hoist=true

# Disable strict peer dependencies to handle Angular/Ionic version conflicts
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Use hoisted node_modules structure for compatibility
node-linker=hoisted

# Performance optimizations
prefer-offline=true
fetch-retries=3
fetch-timeout=60000
network-concurrency=16

# Dedupe on install
dedupe-peer-dependents=true
