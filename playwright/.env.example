# Playwright E2E Test Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Test Credentials (REQUIRED for Docker backend tests)
# =============================================================================
E2E_TEST_USERNAME=40123456
E2E_TEST_PASSWORD=thepassword

# =============================================================================
# Test Environment
# =============================================================================
# Enable Docker backend tests
E2E_DOCKER_TESTS=true

# Custom server (defaults to localhost:4200)
# E2E_PORT=4200
# E2E_HOST=localhost
# E2E_BASE_URL=http://localhost:4200

# =============================================================================
# AI Debug (Midscene.js) - DEV ONLY
# =============================================================================
# Enable AI-powered debugging
MIDSCENE_DEBUG=1

# -----------------------------------------------------------------------------
# Model Provider: CLIProxyAPI (RECOMMENDED - uses your subscriptions)
# Requires: cliproxyapi running on localhost:8765
# Start with: systemctl --user start cliproxyapi
# -----------------------------------------------------------------------------
OPENAI_API_KEY=dummy-key-not-used
OPENAI_BASE_URL=http://localhost:8765/v1
MIDSCENE_MODEL_NAME=gemini-2.5-pro
# Alternative models via CLIProxyAPI:
#   gemini-2.5-pro      (Gemini Ultra subscription)
#   gpt-4o              (ChatGPT Pro subscription via Codex)
#   claude-sonnet-4     (Claude Max - may be blocked as of Jan 2026)

# -----------------------------------------------------------------------------
# Model Provider: OpenAI API (ALTERNATIVE - pay per token)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=sk-your-api-key-here
# MIDSCENE_MODEL_NAME=gpt-4o
# OPENAI_BASE_URL=https://api.openai.com/v1

# -----------------------------------------------------------------------------
# Model Provider: Anthropic Claude API (ALTERNATIVE - pay per token)
# -----------------------------------------------------------------------------
# MIDSCENE_USE_ANTHROPIC_SDK=1
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# MIDSCENE_MODEL_NAME=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Model Provider: Google Gemini API (ALTERNATIVE - free tier available)
# -----------------------------------------------------------------------------
# MIDSCENE_USE_GEMINI=1
# GOOGLE_API_KEY=your-google-api-key
# MIDSCENE_MODEL_NAME=gemini-2.0-flash

# =============================================================================
# Usage Examples
# =============================================================================
# Run tests with AI debug enabled:
#   MIDSCENE_DEBUG=1 pnpm run test:e2e -- --grep "failing-test"
#
# In your test, add:
#   import { aiDump, aiDescribe, aiCheck } from '../helpers';
#   
#   test('debug this', async ({ page }) => {
#     await page.goto('/dashboard');
#     await aiDump(page);  // Prints AI analysis to console
#     
#     const isDark = await aiCheck(page, 'Is dark mode enabled?');
#     console.log('Dark mode:', isDark);
#   });
#
# For removal before production:
#   1. pnpm remove @midscene/web
#   2. Delete playwright/helpers/ai-debug.ts
#   3. Remove export from playwright/helpers/index.ts
