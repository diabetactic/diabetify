FROM python:3.10-slim

WORKDIR /app

# Install curl and postgresql client for database operations
RUN apt-get update && apt-get install -y \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for API interaction
RUN pip3 install --no-cache-dir requests

# Copy test utility scripts
COPY test-utils/ /app/

# Make scripts executable
RUN chmod +x /app/*.py

CMD ["tail", "-f", "/dev/null"]
